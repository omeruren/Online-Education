@model CreateCourseDto
@{
	ViewData["Title"] = "Create Course";
	Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
}


<form method="post">
	<label> Image</label>
	<input type="text" class="form-control" asp-for="ImageUrl" />
	<br />
	<label>Course Name</label>
	<input type="text" class="form-control" asp-for="CourseName" />
	<br />
	<label>Price</label>
	<input type="number" class="form-control" asp-for="Price" />
	<br />
	<label>Course Category</label>
	<select asp-items="@ViewBag.categories" asp-for="CourseCategoryId" class="form-control">
		<option>Select Category</option>
	</select>
	<br />
	<button class="btn btn-outline-primary">Save</button>
</form>
