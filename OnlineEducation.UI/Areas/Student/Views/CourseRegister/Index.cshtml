@model List<ResultCourseRegisterDto>
@{
    ViewData["Title"] = "My Registered Courses";
    Layout = "~/Areas/Student/Views/StudentLayout/Index.cshtml";
}



@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Image Url</th>
		<th>Course Name</th>
		<th>Price</th>
		<th>Course Category Name</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				<img src="@item..Course.ImageUrl" style="height:75px; width:75px" />
			</td>
			<td>
				@item.Course.CourseName
			</td>
			<td>
				@item.Course.Price
			</td>
			<td>
				@item.Course.CourseCategory.CategoryName
			</td>

			<td>
				<button onclick="deleteStudentCourse(@item.CourseId)" class="btn btn-outline-danger">Remove</button>


				

			</td>

		</tr>

	}


</table>
<br />


<a asp-action="RegisterCourse" asp-controller="CourseRegister" asp-area="Student" class="btn btn-outline-primary float-end"> Register to new Course </a>

<script>

	function deleteStudentCourse(id){


		Swal.fire({
	  title: "Are you sure?",
	  text: "You won't be able to revert this!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Yes, delete it!"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Student/CourseRegister/DeleteCourseRegister/" + id;
	  }
	});
	}
</script>