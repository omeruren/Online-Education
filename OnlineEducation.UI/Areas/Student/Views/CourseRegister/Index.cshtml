@model List<ResultCourseRegisterDto>
@{
    ViewData["Title"] = "My Registered Courses";
    Layout = "~/Areas/Student/Views/StudentLayout/Index.cshtml";
}



@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Image Url</th>
		<th>Course Name</th>
		<th>Instructor</th>
		<th>Course Category Name</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				<img src="@item..Course.ImageUrl" style="height:75px; width:75px" />
			</td>
			<td>
				@item.Course.CourseName
			</td>
			<td>
				@item.Course.AppUser.FirstName @item.AppUser.LastName
			</td>
			<td>
				@item.Course.CourseCategory.CategoryName
			</td>

			<td>
				<a asp-action="CourseVideos" asp-controller="CourseRegister" asp-area="Student" asp-route-id="@item.CourseId" class="btn btn-outline-info">See Videos</a>

				

			</td>

		</tr>

	}


</table>
<br />


<a asp-action="RegisterCourse" asp-controller="CourseRegister" asp-area="Student" class="btn btn-outline-primary float-end"> Register to new Course </a>

