@model List<ResultCourseCategoryDto>
@{
	ViewData["Title"] = "Caourse Categories";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Category Name</th>
		<th>Description</th>
		<th>State</th>
		<th></th>
		<th>Home Page State</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				@item.CategoryName
			</td>
			<td>
				@item.Description
			</td>
			<td>
				@(item.IsShown ? "Is Showing" : "Is not Showing")
			</td>
			<td>
				<button onclick="deleteCourseCategory(@item.CourseCategoryId)" class="btn btn-outline-danger">Remove</button>


				<a asp-action="UpdateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryId" class="btn btn-outline-info">
					Update
				</a>

			</td>
			<td>
				<a asp-action="@(item.IsShown ? "DontShowOnHome" : "ShowOnHome")" asp-asp-controller="CourseCategory" asp-asp-area="Admin" asp-route-id="@item.CourseCategoryId" class="btn @(item.IsShown ? "btn-outline-secondary" : "btn-outline-success")">
					@(item.IsShown ? "Do Not Show" : "Show")
				</a>
				
			</td>
		</tr>

	}


</table>
<br />


<a asp-action="CreateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-primary float-end"> Create CourseCategory </a>

<script>

	function deleteCourseCategory(id){


		Swal.fire({
	  title: "Are you sure?",
	  text: "You won't be able to revert this!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Yes, delete it!"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Admin/CourseCategory/DeleteCourseCategory/" + id;
	  }
	});
	}
</script>

