@model CreateCourseCategoryDto
@{
	ViewData["Title"] = "Create Course Category";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<form method="post">
	<label> Course Category Name</label>
	<input type="text" asp-for="CategoryName" class="form-control"/>
	<br />
	<label> Descriptione</label>
	<textarea type="text" rows="5" asp-for="Description" class="form-control"></textarea>
	<br />
	<label> Icon</label>
	<input type="text" asp-for="Icon" class="form-control"/>
	<br />
	<label>Show / Hide on Home Page</label>
	<input type="checkbox" asp-for="IsShown" class="form-check"/>
	<br/>
	<button class="btn btn-outline-primary">Save</button>
</form>