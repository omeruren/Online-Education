@model List<ResultSubscriberDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Email</th>
		<th>Active State</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				@item.Email
			</td>
			<td>
				@item.IsActive
			</td>
			<td>
				<button onclick="deleteSubscriber(@item.SubscriberId)" class="btn btn-outline-danger">Remove</button>

				<a asp-action="UpdateSubscriber" asp-controller="Subscriber" asp-area="Admin" asp-route-id="@item.SubscriberId" class="btn btn-outline-info">
					Update
				</a>

			</td>
		</tr>

	}


</table>
<br />


<a asp-action="CreateSubscriber" asp-controller="Subscriber" asp-area="Admin" class="btn btn-outline-primary float-end"> Add Social Media Link</a>

<script>

	function deleteSubscriber(id){


		Swal.fire({
	  title: "Are you sure?",
	  text: "You won't be able to revert this!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Yes, delete it!"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Admin/Subscriber/DeleteSubscriber/" + id;
	  }
	});
	}
</script>



