@model List<ResultContactDto>

@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Address</th>
		<th>Phone Number</th>
		<th>Email</th>
		<th>Map Url</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				@item.Address
			</td>
			<td>
				@item.Phone
			</td>
			<td>
				@item.Email
			</td>
			<td>
				<a href="@item.MapUrl" target="_blank">Map Url</a>
			</td>

			<td>
				<button onclick="deleteContact(@item.ContactId)" class="btn btn-outline-danger">Remove</button>


				<a asp-action="UpdateContact" asp-controller="Contact" asp-area="Admin" asp-route-id="@item.ContactId" class="btn btn-outline-info">
					Update
				</a>

			</td>
		</tr>

	}


</table>
<br />


<a asp-action="CreateContact" asp-controller="Contact" asp-area="Admin" class="btn btn-outline-primary float-end"> Create Contact </a>

<script>

	function deleteContact(id){


		Swal.fire({
	  title: "Are you sure?",
	  text: "You won't be able to revert this!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Yes, delete it!"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Admin/Contact/DeleteContact/" + id;
	  }
	});
	}
</script>