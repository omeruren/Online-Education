@model List<ResultMessageDto>
@{
	ViewData["Title"] = "Messages";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Name</th>
		<th>Email</th>
		<th>Subject</th>
		<th></th>

	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				@item.Name
			</td>
			<td>
				@item.Email
			</td>
			<td>
				@item.Subject
			</td>
			<td>
				<button onclick="deleteMessage(@item.MessageId)" class="btn btn-outline-danger">Remove</button>


				<a asp-action="MessageDetails" asp-controller="Message" asp-area="Admin" asp-route-id="@item.MessageId" class="btn btn-outline-info">
					Show Details
				</a>

			</td>
		</tr>

	}


</table>
<br />

<script>

	function deleteMessage(id){


		Swal.fire({
	  title: "Are you sure?",
	  text: "You won't be able to revert this!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Yes, delete it!"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Admin/Message/DeleteMessage/" + id;
	  }
	});
	}
</script>

