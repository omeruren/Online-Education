@model List<ResultAboutDto>

@{
	ViewData["Title"] = "About Page";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Image 1</th>
		<th>Image 2</th>
		<th>Description</th>
		<th>Article 1</th>
		<th>Article 2</th>
		<th>Article 3</th>
		<th>Article 4</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>count</th>
			<td>
				<img src="@item.ImageUrl1" style="height: 75px; width: 75px;" />
			</td>
			<td>
				<img src="@item.ImageUrl2" style="height: 75px; width: 75px;" />

			</td>
			<td>@item.Description</td>
			<td>@item.Item1</td>
			<td>@item.Item2</td>
			<td>@item.Item3</td>
			<td>@item.Item4</td>
			<td>
				<a asp-action="UpdateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-danger">
					Remove</a>
				<a asp-action="UpdateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-info">
					Update</a>

			</td>
		</tr>

	}


</table>
<br />

<a asp-action="CreateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-primary float-end"> Create About</a>