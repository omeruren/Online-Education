@model UpdateBlogDto
@{
    ViewData["Title"] = "Update Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
	<input hidden asp-for="BlogId"/>
	<label>Blog Title</label>
	<input type="text" asp-for="Title" class="form-control" />
	<span asp-validation-for="Title" class="text-danger"></span>
	<br />
	<label>Image URL</label>
	<input type="text" asp-for="ImageUrl" class="form-control" />
	<br />
	<label>Content</label>
	<textarea rows="5" type="text" asp-for="Content" class="form-control"></textarea>
	<br />
	<label>Blog Category</label>
	<select asp-items="@ViewBag.categories" asp-for="BlogCategoryId" class="form-control">
		<option>Select Category</option>
	</select>
	<button class="btn btn-outline-primary">Update</button>
</form>

