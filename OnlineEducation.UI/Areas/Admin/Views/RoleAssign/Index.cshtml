
@model List<UserViewModel>
@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Full Name</th>
		<th>User Name</th>
		<th>Role</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				@item.FullName
			</td>
			<td>
				@item.UserName
			</td>
			<td>
				@string.Join(", ", item.Roles) 
			</td>
			<td>


				<a asp-action="AssignRole" asp-controller="RoleAssign" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">
					Assign Role
				</a>

			</td>
		</tr>

	}


</table>
<br />

