@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Title</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>
				<img src="@item.ImageUrl" style="height: 75px; width: 75px;" /> @item.Title
			</td>
			
			<td>
				<a asp-action="DeleteBanner" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.BannerId" class="btn btn-outline-danger">
					Remove
				</a>
				<a asp-action="UpdateBanner" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.BannerId" class="btn btn-outline-info">
					Update
				</a>

			</td>
		</tr>

	}


</table>
<br />

<a asp-action="CreateBanner" asp-controller="Banner" asp-area="Admin" class="btn btn-outline-primary float-end"> Create Banner</a>