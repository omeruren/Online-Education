@model UpdateTestimonialDto
@{
    ViewData["Title"] = "Update Testimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
	<input hidden asp-for="TestimonialId"/>
	<label>Name</label>
	<input type="text" asp-for="Name" class="form-control" />
	<br />
	<label>Image Url</label>
	<input type="text" asp-for="ImageUrl" class="form-control" />
	<br />
	<label>Comment</label>
	<input type="text" asp-for="Comment" class="form-control" />
	<br />
	<label>Star</label>
	<input type="number" asp-for="Star" class="form-control" />
	<br />
	<button class="btn btn-outline-primary">Update</button>
	<a asp-action="Index" asp-area="Admin" asp-controller="Testimonial" class="btn btn-outline-primary">Return</a>
</form>


