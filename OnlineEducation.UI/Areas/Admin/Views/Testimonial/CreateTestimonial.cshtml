@model CreateTestimonialDto
@{
    ViewData["Title"] = "Create Testimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">

	<label>Name</label>
	<input type="text" asp-for="Name" class="form-control" />
	<br />
	<label>Image Url</label>
	<input type="text" asp-for="ImageUrl" class="form-control" />
	<br />
	<label>Comment (max 100 char.)</label>
	<input type="text" maxlength="100" asp-for="Comment" class="form-control" />
	<br />
	<label>Star (1-5)</label>
	<input type="number" asp-for="Star" class="form-control" />
	<br />
	<button class="btn btn-outline-primary">Save</button>
	<a asp-action="Index" asp-area="Admin" asp-controller="Testimonial" class="btn btn-outline-primary">Return</a>
</form>


