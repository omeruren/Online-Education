@model List<ResultBlogDto>
<div class="home-blog-area section-padding30">
	<div class="container">
		<!-- Section Tittle -->
		<div class="row">
			<div class="col-lg-12">
				<div class="section-tittle text-center mb-50">
					<span>Our Latest News From Our Blog</span>
					<h2>Latest News From Blog</h2>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (var blog in Model)
			{

				<div class="col-xl-6 col-lg-6 col-md-6">
					<div class="home-blog-single mb-30">
						<div class="blog-img-cap">
							<div class="blog-img">
								<img src="@blog.ImageUrl" style="width:575px;height:345px" alt="">
								<!-- Blog date -->
								<div class="blog-date text-center">
									<span>@blog.BlogDate.ToString("dd")</span>
									<p>@blog.BlogDate.ToString("MMM")</p>
								</div>
							</div>
							<div class="blog-cap">
								<p>|  @blog.BlogCategory.Name</p>
								<h3><a href="/Blog/BlogDetails/@blog.BlogId">@blog.Title</a></h3>
								<a href="/Blog/BlogDetails/@blog.BlogId" class="more-btn">Read more »</a>
							</div>
						</div>
					</div>
				</div>
			}

		</div>
	</div>
</div>
