@model List<BlogCatWithCountViewModel>

<aside class="single_sidebar_widget post_category_widget">
	<h4 class="widget_title" style="color: #2d2d2d;">Category</h4>
	<ul class="list cat-list">
		@foreach (var blogCat in Model)
		{
			@if (blogCat.BlogCount != 0)
			{
				<li>

					<a href="/Blog/BlogsByCategory/@blogCat.BlogCategoryId" class="d-flex">
						<p>@blogCat.CategoryName</p>
						<p>(@blogCat.BlogCount)</p>
					</a>
				</li>
			}
		}


	</ul>
</aside>